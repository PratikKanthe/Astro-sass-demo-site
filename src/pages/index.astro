---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import AddBaner from '../components/AddBaner.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import Featured from '../layouts/Featured.astro';
import Article from '../layouts/Article.astro';
import Forum from '../layouts/Forum.astro';
import Table from '../layouts/Tables.astro';
import CardSlider from '../layouts/CardSlider.astro';
import FeaturedForum from '../layouts/FeaturedForum.astro';
import Navbar from '../components/Navbar.astro';
import Topbar from '../components/Topbar.astro';
const posts = await Astro.glob('../content/blog/*.md'); 
const {frontmatter} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<BaseHead />
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />

		<link rel="preconnect" href="https://img.indiaforums.com">
		<link rel="preload" as="image" href="https://img.indiaforums.com/article/320x180/18/5023-arjun-kapoor-and-john-abrahams-hindi-remake-of-ayyappanum-koshiyam-put-on-hold.jpg" fetchpriority="high">
		<!-- Favicon -->
		<link rel="icon" type="image/png" href="favicon.ico">

		<script src="https://kit.fontawesome.com/5cbc03ee11.js" crossorigin="anonymous"></script>
	</head>
	<body>
		<div class="bg">
			<Header title={SITE_TITLE} />
			<Navbar />
		</div>
		<Topbar />
		<main>
			<Featured />
			<AddBaner />
			<section>
				<div class="container">
					<h1>India Forums</h1>
					<p>Popular Indian Discussion Platform</p>
				</div>
			</section>
			<Article />
			<AddBaner />
			<Forum />
			<Table />
			<CardSlider />
			<FeaturedForum />
		</main>
		<Footer />
		<script src="../../public/js/index.js"></script>
		<script defer src="../../public/vendors/json2html/json2html.js"></script>
		<script defer src="../../public/js/app.js"></script>
	</body>
</html>

